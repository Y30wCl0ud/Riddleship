        <legend>Vul je profiel aan</legend>

        <label for="naam">Naam</label>
        <input id="naam" type="text" placeholder="b.v. Jan Smit" >
        <label for="leeftijd">Leeftijd</label>
        <input id="leeftijd" type="number" min="18" max="100" >
        <label for="locatie">Locatie (optionel)</label>
        <input id="locatie" type="text" placeholder="Provincie of woonplaats">
        <label for="about">Over jezelf</label>
        <input id="about" type="text" placeholder="Vertel iets over jezelf">


      </fieldset>
      <input type="submit">
      <a href="inloggen.html"><button type="button">terug</button></a>
