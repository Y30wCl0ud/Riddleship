<%- include('../partials/header.ejs') %>


    <form action="/" method="">
      <!-- first fieldset basic info -->
      <fieldset>
        <legend>Schrijf je in</legend>

        <p>Ik ben een</p>
        <label for="ben_m">man</label>
        <input id=ben_m type="radio" name="ben_een" >
        <label for="ben_v">vrouw</label>
        <input id=ben_v type="radio" name="ben_een">

        <p>en zoek een</p>
        <label for="zoek_m">man</label>
        <input id=zoek_m type="checkbox" name="zoek_een">
        <span>en/of</span>
        <label for="zoek_v">vrouw</label>
        <input id=zoek_v type="checkbox" name="zoek_een">

        <p>tussen de: x - x </p>
        <label for="">minimaal(18)</label>
